{
  "name": "task-management-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run env:setup && vite",
    "env:setup": "node -e \"const fs = require('fs'); if (!fs.existsSync('.env')) { fs.copyFileSync('.env.example', '.env'); console.log('Created .env from .env.example'); }\"",
    "build": "tsc -b && vite build",
    "clean": "rimraf dist node_modules package-lock.json",
    "clean:build": "rimraf dist",
    "clean:install": "npm run clean && npm install",
    "clean:full": "npm run clean && npm install && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && npm run lint",
    "build:analyze": "npm run build && npx vite-bundle-analyzer dist/stats.json",
    "build:secure": "npm run security:check && npm run build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-query": "^5.87.1",
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "task-management-app": "file:../..",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tanstack/react-query-devtools": "^5.87.4",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}
