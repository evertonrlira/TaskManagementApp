{
  "name": "task-management-app",
  "private": true,
  "scripts": {
    "start": "npm-run-all frontend:install --parallel backend frontend:dev",
    "frontend:install": "npm install --prefix ./src/frontend",
    "frontend:dev": "npm run dev --prefix ./src/frontend",
    "backend": "dotnet run --project ./src/backend/TaskManagement.Api/TaskManagement.Api.csproj",
    "test:e2e": "npm-run-all --parallel start \"test:e2e:run\" --",
    "test:e2e:run": "cd tests/e2e && npx playwright test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  }
}
