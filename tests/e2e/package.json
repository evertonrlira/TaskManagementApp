{
  "name": "task-management-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Task Management Application",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:trace": "playwright test --trace on",
    "install": "playwright install",
    "install:deps": "playwright install-deps",
    "setup": "npm install && npm run install && npm run install:deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.8.3"
  }
}
